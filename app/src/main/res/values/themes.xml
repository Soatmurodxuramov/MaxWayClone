<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.MaxWayClone" parent="Theme.Material3.DayNight.NoActionBar">
    </style>

    <style name="Theme.MaxWayClone" parent="Base.Theme.MaxWayClone" />
    <style name="MaxWayText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/sf_pro_display_regular</item>
    </style>
<style name="MaxWayText.Description">
    <item name="android:textColor">@color/dark_grey</item>
    <item name="fontFamily">@font/sf_pro_display_regular</item>
</style>

    <style name="MaxWayText.Title">
        <item name="android:height">24sp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/sf_pro_display_regular</item>
    </style>


    <style name="MaxWayText.ProductName">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/sf_pro_display_regular</item>

    </style>

    <style name="MaxWayButton" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="MaxWayButton.Price">
        <item name="backgroundTint">@color/btn_light_grey</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">13sp</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/sf_pro_display_regular</item>

    </style>


    <style name="MaxWayButton.Primary">
        <item name="backgroundTint">@color/btn_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/sf_pro_display_regular</item>
        <item name="textAllCaps">false</item>


    </style>
</resources>